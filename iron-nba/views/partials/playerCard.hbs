<!-- views/partials/playerCard.hbs -->

<div class="col-md-4">
    <div class="card">
        <img class="card-img-top" src="{{this.photo}}" alt="{{this.name}} {{this.lastName}}" />
        <div class="card-body">
            <h5 class="card-title">{{this.name}} {{this.lastName}}</h5>
            <p class="card-text">{{this.team}}</p>
            {{#each average}}
            <div class="col-md-6">
                <p>{{year}}</p>
            </div>
            <div class="col-md-6">
                <p>{{points}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</div>